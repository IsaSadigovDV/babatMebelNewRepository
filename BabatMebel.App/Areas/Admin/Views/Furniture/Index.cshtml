@model List<FurnitureGetDto>
@{
    int i = 0;
}

<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var furniture in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@furniture.Name</td>
                    <td>@furniture.Price</td>
                    <td><img src="~/@furniture.ImageUrl" alt="Alternate Text" /></td>
                    <td><a asp-controller="furniture" asp-action="delete" asp-route-id="@furniture.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-controller="furniture" asp-action="update" asp-route-id="@furniture.Id" class="btn btn-primary">Edit</a></td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <div style="float:right;">
        <a asp-controller="furniture" asp-action="create" class="btn btn-success">Create furniture</a>
    </div>
</div>