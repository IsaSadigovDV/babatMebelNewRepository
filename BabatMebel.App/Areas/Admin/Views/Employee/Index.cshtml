@model List<EmployeeGetDto>
@{
    int i = 0;
}

<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td><a asp-controller="employee" asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-controller="employee" asp-action="update" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a></td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <div style="float:right;">
        <a asp-controller="employee" asp-action="create" class="btn btn-success">Create employee</a>
    </div>
</div>