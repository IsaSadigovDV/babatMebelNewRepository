@model List<ContactGetDto>
@{
    int i = 0;
}

<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
                <th scope="col">Change Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td><a asp-controller="contact" asp-action="GetById" asp-route-id="@contact.Id">@contact.FirstName</a></td>
                    <td>@contact.Email</td>
                    <td>@contact.Status</td>
                    <td><a asp-controller="contact" asp-action="delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a></td>
                    <td><a class="btn btn-primary">Edit</a></td>
                    @if(contact.Status == false){
                        <td><a asp-controller="contact" asp-action="ChangeStatus" asp-route-id="@contact.Id" class="btn btn-success">Change Status</a></td>
                    }
                    else{
                        <td><a asp-controller="contact" asp-action="ReverseStatus" asp-route-id="@contact.Id" class="btn btn-warning">Reverse Status</a></td>
                    }
                </tr>
                i++;
            }
        </tbody>
    </table>
    <div style="float:right;">
        <a asp-controller="contact" asp-action="create" class="btn btn-success">Create contact</a>
    </div>
</div>